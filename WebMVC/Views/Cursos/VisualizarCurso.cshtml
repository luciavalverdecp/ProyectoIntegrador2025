@using NextLevel.Compartidos.DTOs.Cursos
@model CursoDTO

@section Header {
    @await Html.PartialAsync("~/Views/Home/Header.cshtml")
}

@section Styles {
<link rel="stylesheet" href="~/css/cursos/VisualizacionCurso.css" />
}

@section ScriptsJs {
    <script>
        const NOMBRE_CURSO = "@Model.Nombre";
        const FECHA_INICIO_CURSO = "@Model.FechaInico.ToString("yyyy-MM-dd")";
        const FECHA_FIN_CURSO    = "@Model.FechaFin.ToString("yyyy-MM-dd")";
    </script>
    <script src="~/js/Cursos/VisualizacionCurso.js"></script>
}

<div class="curso-container">

    <!-- HEADER -->
    <div class="curso-header">
        <img src="@Model.RutaArchivo" class="curso-img" />

        <div>
            <h1 class="curso-title">@Model.Nombre</h1>
            <p class="text-muted">@Model.DocenteNombreDTO?.NombreCompleto</p>
        </div>
    </div>

    <!-- INFO DEL CURSO -->
    <div class="mt-4 p-4 rounded" style="background: var(--pastel-bg)">
        <h4 class="fw-semibold">Descripción</h4>
        <p>@Model.Descripcion</p>
    </div>

    <!-- TABS -->
    <div class="tab-buttons">
        <button class="tab-btn active" data-target="materiales">Materiales</button>
        <button class="tab-btn" data-target="foro">Foro</button>
        <button class="tab-btn" data-target="contacto">Contacto</button>
        <button class="tab-btn" data-target="clases">Clases</button>
    </div>

    <!-- MATERIAL -->
    <div id="materiales" class="tab-content show">
        <h4 class="fw-bold mb-3">📚 Materiales</h4>

        <div class="row mt-3">

            <!-- LISTA DE SEMANAS -->
            <div class="col-3">
                <div class="semanas-scroll">
                    <ul class="list-group">
                        @if (Model.Semanas != null)
                        {
                            foreach (var semana in Model.Semanas)
                            {
                                <li class="list-group-item semana-btn"
                                data-semana="@semana.Numero"
                                data-fInicio="@semana.FechaInicio.ToString("yyyy-MM-dd")">
                                    Semana @semana.Numero
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>

            <!-- MATERIAL POR SEMANA -->
            <div class="col-9">
                @foreach (var semana in Model.Semanas)
                {
                    <div id="semana-@semana.Numero" class="semana-material" style="display:none;">
                        <h5>Material Semana @semana.Numero</h5>

                        @if (semana.Materiales != null)
                        {
                            foreach (var mat in semana.Materiales)
                            {
                                <div class="material-item d-flex justify-content-between">
                                    <span class="material-link"
                                    data-tipo="@((int)mat.TipoMaterial)"
                                    data-ruta="@mat.RutaArchivo"
                                    data-texto="@mat.Nombre">
                                        📄 @mat.Nombre
                                    </span>
                                </div>
                            }

                            <div class="material-texto mt-3" id="materialTexto-@semana.Numero" style="display:none;"></div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- FORO -->
    <div id="foro" class="tab-content">
        <h4 class="fw-bold mb-3">💬 Foro</h4>

        <div class="chat-box" id="foroMensajes">
            @if (Model.Foro?.Mensajes != null)
            {
                foreach (var msg in Model.Foro.Mensajes)
                {
                    <div class="msg @(msg.EsDelEstudiante ? "mine" : "")">@msg.mensaje</div>
                }
            }
        </div>

        <div class="chat-input">
            <input type="text" id="foroInput" placeholder="Escribe un mensaje...">
            <button onclick="EnviarForo()">Enviar</button>
        </div>
    </div>

    <!-- CONTACTO -->
    <div id="contacto" class="tab-content">
        <h4 class="fw-bold mb-3">📨 Contacto con el docente</h4>

        <div class="chat-box" id="contactoMensajes"></div>

        <div class="chat-input">
            <input type="text" id="contactoInput" placeholder="Escribe un mensaje...">
            <button onclick="EnviarContacto()">Enviar</button>
        </div>
    </div>

    <!-- CALENDARIO -->
    <div id="clases" class="tab-content">
        @if (TempData["ErrorAgendarClase"] != null && !(bool)TempData["ErrorAgendarClase"])
        {
            <div class="alert alert-success text-center mb-2 mt-3">@TempData["MensajeAgendaClase"]</div>
        }

        @if (TempData["ErrorAgendarClase"] != null && (bool)TempData["ErrorAgendarClase"])
        {
            <div class="alert alert-danger text-center mb-2 mt-3">@TempData["MensajeAgendaClase"]</div>
        }
        <div class="calendar-header">
            <button class="cal-btn" id="prevMes">◀</button>
            <h4 id="mesActual"></h4>
            <button class="cal-btn" id="nextMes">▶</button>
        </div>

        <div class="calendar-grid" id="calGrid"></div>

    </div>

</div>



<!-- MODAL PARA AGREGAR MATERIAL -->
<div class="modal fade" id="modalAgregarMaterial" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Agregar Material</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="formAgregarMaterial" asp-action="AgregarMaterial" asp-controller="Materiales" method="post" enctype="multipart/form-data">
                <div class="modal-body">

                    <input type="hidden" id="SemanaNumero" name="SemanaNumero" />
                    <input type="hidden" name="CursoNombre" value="@Model.Nombre" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre del material</label>
                        <input type="text" class="form-control" name="Nombre" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Texto</label>
                        <input type="text" class="form-control" name="Texto" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Archivo</label>
                        <input type="file" class="form-control" name="Archivo" required />
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Subir material</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- MODAL PARA CONFIRMAR ELIMINACIÓN -->
<div class="modal fade" id="modalEliminarMaterial" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title text-danger">Eliminar material</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form method="post" asp-action="EliminarMaterial" asp-controller="Materiales">
                <div class="modal-body">
                    <p>¿Seguro que deseas eliminar <strong id="deleteMaterialName"></strong>?</p>

                    <input type="hidden" name="CursoNombre" id="deleteCursoNombre" />
                    <input type="hidden" name="SemanaNumero" id="deleteSemanaNumero" />

                    <!-- Estos 3 van dentro del DTO MaterialBasicoDTO -->
                    <input type="hidden" name="RutaArchivo" id="deleteMaterialRuta" />
                    <input type="hidden" name="Nombre" id="deleteMaterialNombre" />
                    <input type="hidden" name="TipoMaterial" id="deleteMaterialTipo" />
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button class="btn btn-danger" type="submit">Eliminar</button>
                </div>
            </form>

        </div>
    </div>
</div>
