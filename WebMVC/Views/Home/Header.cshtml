@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow p-0">
        <div class="container-fluid headerNormal py-1">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.png" alt="Logo de NextLevel">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            @if (Context.Session.GetString("rolLogueado") == null)
            {
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                    </ul>
                </div>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Login">Ingresar/Registro</a>
                    </li>
                </ul>
            }
            else
            {
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("rolLogueado") == "Estudiante")
                        {
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                        }
                        else if (Context.Session.GetString("rolLogueado") == "Docente")
                        {
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("rolLogueado") == "Estudiante")
                        {
                            if (!(currentController == "Estudiantes" && currentAction == "MisCursos"))
                            {
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Estudiantes" asp-action="MisCursos">Mis cursos</a>
                                </li>
                            }
                            if (!(currentController == "Estudiantes" && currentAction == "Explorar"))
                            {
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Cursos" asp-action="ListadoCursos">Explorar</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Estudiantes" asp-action="Perfil">
                                    <img src="~/img/perfil.png" alt="Perfil" />
                                </a>
                            </li>
                        }
                        else if (Context.Session.GetString("rolLogueado") == "Docente")
                        {
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="Docentes" asp-action="Perfil">
                                    <img src="~/img/perfil.png" alt="Perfil" />
                                </a>
                            </li>
                        }

                        <li class="nav-item d-flex align-items-center">
                            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Usuarios" asp-action="LogOut">LogOut</a>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </nav>
</header>
