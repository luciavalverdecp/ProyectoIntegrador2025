@{
    ViewData["Title"] = "Verificación de Cuenta";
}

<div class="box">
    <div class="inner-box">
        <div class="content-wrapper">
            @if (ViewBag.ErrorVerificarEmailMensaje == "Usuario verificado exitosamente.")
            {
                <div class="verification success">
                    
                    <h2>¡Tu cuenta fue verificada exitosamente! 🎉</h2>
                    <p>
                        Ahora podés iniciar sesión y comenzar a disfrutar de todas las funcionalidades que <strong>NextLevel</strong> tiene para vos.
                    </p>
                    <a href="@Url.Action("Login","Usuarios")" class="btn-verificacion">Iniciar sesión</a>
                </div>
            }
            else if (ViewBag.ErrorVerificarEmailMensaje == "El enlace de verificación ya caducó.")
            {
                <div class="verification warning">
                    
                    <h2>El enlace de verificación caducó ⏰</h2>
                    <p>
                        Parece que el enlace que utilizaste ya expiró.
                        No te preocupes, podés solicitar un nuevo correo de verificación.
                    </p>
                    <a href="@Url.Action("ReenviarVerificacion","Usuarios", new {emailDestino = ViewBag.EmailDestino})" class="btn-verificacion amarillo">Reenviar verificación</a>
                </div>
            }
            else if (ViewBag.ErrorVerificarEmailMensaje == "Error al verificar el email.")
            {
                <div class="verification error">
                    
                    <h2>Hubo un error al verificar tu correo ❌</h2>
                    <p>
                        Es posible que tu cuenta ya esté verificada o que el enlace haya sido invalidado.
                        Si el problema persiste, contactá al soporte de <strong>NextLevel</strong>.
                    </p>
                    <a href="@Url.Action("Login","Usuarios")" class="btn-verificacion rosa">Volver al inicio</a>
                </div>
            }
            else if (ViewBag.ErrorVerificarEmailMensaje == "Error al verificar el email.")
            {
                <div class="verification error">

                    <h2>Hubo un error al verificar tu correo ❌</h2>
                    <p>
                        Es posible que tu cuenta ya esté verificada o que el enlace haya sido invalidado.
                        Si el problema persiste, contactá al soporte de <strong>NextLevel</strong>.
                    </p>
                    <a href="@Url.Action("Login","Usuarios")" class="btn-verificacion rosa">Volver al inicio</a>
                </div>
            }
            else if (ViewBag.ErrorCancelarVerificacionMensaje == "Usuario cancelado exitosamente.")
            {
                <div class="verification success pastel-cancel">
                    <h2>Tu solicitud fue cancelada con éxito 💫</h2>
                    <p>
                        La verificación fue detenida correctamente.
                        Si querés volver a intentarlo más adelante, siempre podés hacerlo desde tu correo.
                    </p>
                </div>
            }
            else if (ViewBag.ErrorCancelarVerificacionMensaje == "El correo ya se encuentra verificado")
            {
                <div class="verification success pastel-verified">
                    <h2>Tu correo ya está verificado 🌈</h2>
                    <p>
                        ¡Todo está en orden! Tu cuenta ya fue confirmada anteriormente.
                        Podés iniciar sesión sin problema en <strong>NextLevel</strong>.
                    </p>
                    <a href="@Url.Action("Login","Usuarios")" class="btn-verificacion verde">Ir al inicio</a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/Usuarios/VerificacionCuenta.css" />
}
